<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ForgotPasswordActivity">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/ic_rectangle_login"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Lupa Password?"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginVertical="20dp"
            android:textColor="#152A60"
            />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/lock"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Jika akun mu pelamar kerja maka masukkan alamat email pribadi yang terdaftar , jika akun mu pemberi pekerjaan  maka masukkan alamat email perusahaan "
            android:textSize="14dp"
            android:layout_marginTop="@dimen/_20sdp"
            android:textColor="#8189B0"
            />

        <EditText
            android:id="@+id/email_text_two_forgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Alamat Email"
            android:paddingVertical="20dp"
            android:paddingHorizontal="30dp"
            android:textColorHint="#8189B0"
            android:textSize="14sp"
            android:textColor="#8189B0"
            android:background="@drawable/input_shape"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="15dp"/>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardCornerRadius="30dp">

            <Button
                android:id="@+id/btnlogin_forgot"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="#27448E"
                android:text="Kirim"
                android:textAllCaps="false"
                android:textSize="15sp" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardCornerRadius="30dp">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/btn_outline_1"
                android:text="Kembali"
                android:textAllCaps="false"
                android:textColor="#27448E"
                android:textSize="15sp" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>


</ScrollView>