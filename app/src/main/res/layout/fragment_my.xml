<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MyFragment">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:id="@+id/yes">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/header" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civii"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/onee">

        </de.hdodenhof.circleimageview.CircleImageView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/civii"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:text="User Name"
            android:id="@+id/you"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/you"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:text="Software Developer"
            android:id="@+id/youtwo"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif">

        </TextView>


    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/yes"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lili"
            android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_person_outline_24"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            app:tint="@color/black">

        </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="18dp"
                android:text="Ubah Profile"
                android:id="@+id/accountinfo"
                android:textSize="14sp"
                android:textColor="#423D3D">

            </TextView>





        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BAB6B6"
        android:layout_below="@+id/lili"
        android:layout_marginTop="2dp">
    </View>


        <LinearLayout
            android:id="@+id/lilitwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lili"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_information"
                app:tint="@color/black">

            </ImageView>

            <TextView
                android:id="@+id/ujumbe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="25dp"
                android:text="Tentang Kami"
                android:textColor="#423D3D"
                android:textSize="14sp">

            </TextView>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BAB6B6"
            android:layout_below="@+id/lili"
            android:layout_marginTop="2dp">
        </View>


        <LinearLayout
            android:id="@+id/out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_baseline_exit_to_app_24"
                app:tint="@color/black">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="25dp"
                android:text="Logout"
                android:textColor="#423D3D"
                android:textSize="14sp">

            </TextView>


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BAB6B6"
            android:layout_below="@+id/lili"
            android:layout_marginTop="2dp">
        </View>

    </LinearLayout>

</RelativeLayout>