<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".employerProfile">


        <RelativeLayout
            android:id="@+id/yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/giddy"
            android:paddingVertical="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Profile"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold">

            </TextView>


        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/marketing"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/kamplion">

                    <TextView
                        android:id="@+id/cominfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="16dp"
                        android:text="Info Perusahaan"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="16sp">

                    </TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cominfo"
                        android:id="@+id/kamoja"
                        android:layout_marginTop="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Website"
                            android:textSize="16sp"
                            android:id="@+id/web"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"
                            android:textStyle="bold">

                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:id="@+id/webme"
                            android:textColor="@color/black"
                            android:layout_marginLeft="100dp"
                            >

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/kamoja"
                        android:id="@+id/kambili"
                        android:layout_marginTop="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kantor Pusat"
                            android:textSize="16sp"
                            android:id="@+id/webkamoja"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:id="@+id/webmek"
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:layout_marginStart="65dp"
                            android:text="-"
                            android:textColor="@color/black">

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/kambili"
                        android:id="@+id/katatu"
                        android:layout_marginTop="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tahun Didirikan"
                            android:textSize="16sp"
                            android:id="@+id/websasa"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"
                            android:textStyle="bold">

                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:id="@+id/webmefu"
                            android:layout_marginStart="47dp"
                            android:textColor="@color/black"
                            >

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/katatu"
                        android:id="@+id/kanne"
                        android:layout_marginTop="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jumlah Karyawan"
                            android:textSize="16sp"
                            android:id="@+id/webmoo"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"
                            android:textStyle="bold">

                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:id="@+id/webmemoo"
                            android:layout_marginStart="32dp"
                            android:textColor="@color/black"

                            >

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/kanne"
                        android:id="@+id/katano"
                        android:layout_marginTop="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Industry"
                            android:id="@+id/webmew"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"
                            android:textStyle="bold">

                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:id="@+id/webmemew"
                            android:layout_marginStart="104dp"
                            android:textColor="@color/black"

                            >

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/katano"
                        android:id="@+id/kasita"
                        android:layout_marginTop="14dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:id="@+id/webtu"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:layout_marginRight="12dp"
                            android:layout_marginLeft="10dp"
                            >

                        </TextView>


                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#807D7D"
                        android:id="@+id/kampww"
                        android:layout_below="@+id/kasita"
                        android:layout_marginTop="20dp">

                    </View>

                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginHorizontal="20dp"
                    app:cardCornerRadius="30dp">

                    <Button
                        android:id="@+id/btntentangkami"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@drawable/ic_rectangle_loginblue"
                        android:backgroundTint="#27448E"
                        android:text="Tentang Kami"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="100dp"
                    android:layout_marginHorizontal="20dp"
                    app:cardCornerRadius="30dp">

                    <Button
                        android:id="@+id/btnout"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@drawable/btn_outline_1"
                        android:text="Logout"
                        android:textAllCaps="false"
                        android:textColor="#27448E"
                        android:textSize="15sp" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>




</LinearLayout>