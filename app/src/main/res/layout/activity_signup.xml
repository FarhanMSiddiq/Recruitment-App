<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.SignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/banner"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:text="Daftar Akun Sebagai Pelamar Kerja"
                android:textSize="18dp"
                android:paddingStart="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:paddingTop="20dp"/>

        </LinearLayout>


        <EditText
            android:id="@+id/fullname_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Lengkap"
            android:inputType="textPersonName"
            android:paddingVertical="20dp"
            android:paddingHorizontal="30dp"
            android:textColorHint="#8189B0"
            android:textSize="14sp"
            android:textColor="#8189B0"
            android:background="@drawable/input_shape"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/email_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Alamat Email"
            android:paddingVertical="20dp"
            android:paddingHorizontal="30dp"
            android:textColorHint="#8189B0"
            android:textSize="14sp"
            android:textColor="#8189B0"
            android:background="@drawable/input_shape"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="15dp"/>


        <EditText
            android:id="@+id/proffession_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Professional Title"
            android:paddingVertical="20dp"
            android:paddingHorizontal="30dp"
            android:textColorHint="#8189B0"
            android:textSize="14sp"
            android:textColor="#8189B0"
            android:background="@drawable/input_shape"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="15dp"/>


        <Spinner
            android:id="@+id/techtextone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password_confirm_two"
            android:background="@drawable/input_shape_black"
            android:textSize="14sp"
            android:spinnerMode="dialog"
            android:textColor="#8189B0"
            android:textColorHint="#8189B0"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="15dp"
            android:paddingHorizontal="20dp"/>

        <TextView
            android:id="@+id/wapione"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/techtextone"
            android:textColorHint="@android:color/black"
            android:textSize="16sp"
            android:visibility="gone"
            android:textColor="@android:color/black"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="8dp"/>


        <EditText
            android:id="@+id/password_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingVertical="20dp"
            android:paddingHorizontal="30dp"
            android:textColorHint="#8189B0"
            android:textSize="14sp"
            android:textColor="#8189B0"
            android:background="@drawable/input_shape"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="15dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Dengan Mendaftar Akun , Anda menyetujui Persyaratan layanan dan Kebijakan Cookie Cari-Kerja"
            android:textColor="#8189B0"
            android:textSize="14dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            app:cardCornerRadius="30dp">

            <Button
                android:id="@+id/btnsignup"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/ic_rectangle_loginblue"
                android:backgroundTint="#27448E"
                android:text="Daftar Akun Pelamar Kerja"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardCornerRadius="30dp">

            <Button
                android:id="@+id/wajuakwambaniniwetu"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/btn_outline_1"
                android:text="Daftar Sebagai Pemberi Pekerjaan"
                android:textAllCaps="false"
                android:textColor="#27448E"
                android:textSize="15sp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/email_textsijui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#8189B0"
            android:gravity="center"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:text="Sudah Punya Akun ? Login Sebagai Pelamar Kerja"/>


    </LinearLayout>



</ScrollView>