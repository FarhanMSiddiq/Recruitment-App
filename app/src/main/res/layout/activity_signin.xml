<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Activity.SigninActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Pelamar Kerja"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginVertical="20dp"
            android:textColor="#152A60"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/img_login"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Silahkan Masukan Akun Pelamar Kerja"
            android:textSize="14dp"
            android:layout_marginTop="@dimen/_20sdp"
            android:textColor="#8189B0"
            />


        <EditText
            android:id="@+id/email_text_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_text"
            android:hint="Email Address"
            android:paddingVertical="20dp"
            android:paddingHorizontal="30dp"
            android:textColorHint="#8189B0"
            android:textSize="14sp"
            android:textColor="#8189B0"
            android:background="@drawable/input_shape"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="15dp"/>



        <EditText
            android:id="@+id/password_text_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password_text"
            android:hint="Password"
            android:paddingVertical="20dp"
            android:paddingHorizontal="30dp"
            android:inputType="textPassword"
            android:textColor="#8189B0"
            android:textColorHint="#8189B0"
            android:textSize="14sp"
            android:background="@drawable/input_shape"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="15dp"/>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            app:cardCornerRadius="30dp">

            <Button
                android:id="@+id/btnlogin"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/ic_rectangle_loginblue"
                android:backgroundTint="#27448E"
                android:text="Login Pelamar Kerja"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardCornerRadius="30dp">

            <Button
                android:id="@+id/wajuakwamba"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/btn_outline_1"
                android:text="Login Sebagai Pemberi Pekerjaan"
                android:textAllCaps="false"
                android:textColor="#27448E"
                android:textSize="15sp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/signup_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#8189B0"
            android:gravity="center"
            android:layout_marginTop="@dimen/_30sdp"
            android:text="Belum Punya Akun ? Daftar Sebagai Pelamar Kerja"/>



    </LinearLayout>

</ScrollView>