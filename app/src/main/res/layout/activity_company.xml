<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.SignupCompanyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/banner"
            android:layout_marginTop="20dp">



            <TextView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:text="Daftar Akun Sebagai Pemberi Pekerjaan"
                android:textSize="18dp"
                android:paddingStart="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:paddingTop="20dp"/>

        </LinearLayout>


        <TextView
            android:id="@+id/email_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="4dp"
            android:layout_marginVertical="20dp"
            android:text="Detail Perwakilan Perusahaan"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/fullname_signuprep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Lengkap"
            android:inputType="textPersonName"
            android:paddingVertical="20dp"
            android:paddingHorizontal="30dp"
            android:textColorHint="#8189B0"
            android:textSize="14sp"
            android:textColor="#8189B0"
            android:background="@drawable/input_shape"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp" />

        <EditText
            android:id="@+id/email_signuprep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Perwakilan"
            android:inputType="textEmailAddress"
            android:paddingVertical="20dp"
            android:paddingHorizontal="30dp"
            android:textColorHint="#8189B0"
            android:textSize="14sp"
            android:textColor="#8189B0"
            android:background="@drawable/input_shape"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/mobile_signuprep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="No.Handphone"
            android:inputType="phone"
            android:paddingVertical="20dp"
            android:paddingHorizontal="30dp"
            android:textColorHint="#8189B0"
            android:textSize="14sp"
            android:textColor="#8189B0"
            android:background="@drawable/input_shape"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="15dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="4dp"
            android:layout_marginVertical="20dp"
            android:text="Detail Perusahaan"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/techtextonetest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password_confirm_two_test"
            android:background="@drawable/input_shape_black"
            android:textSize="14sp"
            android:spinnerMode="dialog"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:paddingHorizontal="20dp"/>

        <TextView
            android:id="@+id/wapionetest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/techtextonetest"
            android:textColorHint="@android:color/black"
            android:textSize="16sp"
            android:visibility="gone"
            android:textColor="@android:color/black"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/reg_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Website Perusahaan"
            android:inputType="textEmailAddress"
            android:paddingVertical="20dp"
            android:paddingHorizontal="30dp"
            android:textColorHint="#8189B0"
            android:textSize="14sp"
            android:textColor="#8189B0"
            android:background="@drawable/input_shape"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Perusahaan"
            android:inputType="text"
            android:paddingVertical="20dp"
            android:paddingHorizontal="30dp"
            android:textColorHint="#8189B0"
            android:textSize="14sp"
            android:textColor="#8189B0"
            android:background="@drawable/input_shape"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/reg_me"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:inputType="textMultiLine"
            android:lines="8"
            android:gravity="top|start"
            android:hint="Jelaskan secara singkat tentang perusahaan"
            android:paddingVertical="20dp"
            android:paddingHorizontal="30dp"
            android:textColorHint="#8189B0"
            android:textSize="14sp"
            android:textColor="#8189B0"
            android:background="@drawable/input_shape"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="15dp"/>


        <EditText
            android:id="@+id/location_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kantor Pusat"
            android:inputType="text"
            android:paddingVertical="20dp"
            android:paddingHorizontal="30dp"
            android:textColorHint="#8189B0"
            android:textSize="14sp"
            android:textColor="#8189B0"
            android:background="@drawable/input_shape"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/location_one_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tanggal/Tahun Didirikan"
            android:inputType="text"
            android:paddingVertical="20dp"
            android:paddingHorizontal="30dp"
            android:textColorHint="#8189B0"
            android:textSize="14sp"
            android:textColor="#8189B0"
            android:background="@drawable/input_shape"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/location_one_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Jumlah Karyawan"
            android:inputType="text"
            android:paddingVertical="20dp"
            android:paddingHorizontal="30dp"
            android:textColorHint="#8189B0"
            android:textSize="14sp"
            android:textColor="#8189B0"
            android:background="@drawable/input_shape"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/mail_company_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mail_company"
            android:hint="Email Perusahaan"
            android:inputType="textEmailAddress"
            android:paddingVertical="20dp"
            android:paddingHorizontal="30dp"
            android:textColorHint="#8189B0"
            android:textSize="14sp"
            android:textColor="#8189B0"
            android:background="@drawable/input_shape"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/pass_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingVertical="20dp"
            android:paddingHorizontal="30dp"
            android:textColorHint="#8189B0"
            android:textSize="14sp"
            android:textColor="#8189B0"
            android:background="@drawable/input_shape"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="15dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Dengan Mendaftar Akun , Anda menyetujui Persyaratan layanan dan Kebijakan Cookie Cari-Kerja"
            android:textColor="#8189B0"
            android:textSize="14dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            app:cardCornerRadius="30dp">

            <Button
                android:id="@+id/btnsignup_company"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/ic_rectangle_loginblue"
                android:backgroundTint="#27448E"
                android:text="Daftar Akun Pemberi Pekerjaan"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardCornerRadius="30dp">

            <Button
                android:id="@+id/btnsignup_individu"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/btn_outline_1"
                android:text="Daftar Sebagai Pelamar Kerja"
                android:textAllCaps="false"
                android:textColor="#27448E"
                android:textSize="15sp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/login_employer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#8189B0"
            android:gravity="center"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:text="Sudah Punya Akun ? Login Sebagai Pemberi Kerja"/>



    </LinearLayout>




</ScrollView>